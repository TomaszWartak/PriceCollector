<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_view_corner_radius"
    card_view:cardElevation="@dimen/card_view_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?mainViewsColorSurface"
        android:elevation="@dimen/elevation"
        tools:context=".view.E4_analysis_articles_list_screen.SearchArticlesFragment" >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:elevation="@dimen/elevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_articles_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/double_margin"
                android:gravity="center_horizontal"
                android:text="@string/searching_articles"
                android:textSize="@dimen/head4_font_size"
                android:textColor="?android:textColorSecondary"
                android:textStyle="bold"
                android:elevation="@dimen/elevation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--TextView
                android:id="@+id/search_articles_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_margin"
                android:layout_marginStart="@dimen/margin"
                android:text="@string/searching"
                android:textSize="@dimen/three_dots_menu_font_size"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_articles_header"
                tools:layout_editor_absoluteX="0dp" /-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/search_articles_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/elevation"
            app:tabMode="scrollable"
            style="@style/PC_TabLayoutStyle" >

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/search_articles_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="@dimen/elevation"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_articles_tabs">

        </androidx.viewpager2.widget.ViewPager2>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
