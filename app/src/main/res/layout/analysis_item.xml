<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_view_margin_left"
        android:layout_marginTop="@dimen/card_view_margin_top"
        android:layout_marginRight="@dimen/card_view_margin_right"
        android:layout_marginBottom="@dimen/card_view_margin_bottom"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/analysisItem_creationDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/card_view_interior_left_guideline"
                android:text="Creation date" />

            <TextView
                android:id="@+id/analysisItem_dueDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/card_view_interior_left_guideline"
                android:text="Due date" />

            <TextView
                android:id="@+id/analysisItem_finishDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/card_view_interior_left_guideline"
                android:text="Finish date" />

            <TextView
                android:id="@+id/analysisItem_confirmationDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/card_view_interior_left_guideline"
                android:text="Confirmation date" />

            <ProgressBar
                android:id="@+id/analysis_remote_2_local_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:minWidth="200dp"
                android:minHeight="50dp"
                android:progress="1"
                android:visibility="gone"
                card_view:layout_constraintStart_toStartOf="@+id/guideline_analysis_item"
                card_view:layout_constraintTop_toBottomOf="@+id/label_analysis_confirmation_date" />

            <!-- guideline -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_analysis_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_begin="@dimen/card_view_interior_left_guideline" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>